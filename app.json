{
  "id": "com.airthings",
  "version": "1.1.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "brandColor": "#e5ac00",
  "name": {
    "en": "Airthings"
  },
  "description": {
    "en": "BLE devices which measures radon, VOC, temperature and humidity."
  },
  "category": [
    "tools",
    "climate"
  ],
  "tags": {
    "en": [
      "radon",
      "radon sensor",
      "airthings",
      "airthings wave plus",
      "airthings wave",
      "wave plus",
      "wave"
    ]
  },
  "permissions": [
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "CRUDE AS / Vegard Brenden",
    "email": "anaxyd@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "CRUDE AS / Vegard Brenden",
        "email": "vegard@crude.no"
      },
      {
        "name": "Airthings AS / Ole Andreas Torvmark",
        "email": "ole.torvmark@airthings.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "anaxyd"
      }
    }
  },
  "capabilities": {
    "measure_radon": {
      "type": "number",
      "title": {
        "en": "Radon"
      },
      "icon": "/assets/radon.svg",
      "insights": true,
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": {
        "en": "bq"
      },
      "min": 0,
      "max": 2000,
      "step": 1
    },
    "measure_voc": {
      "type": "number",
      "title": {
        "en": "VOC"
      },
      "icon": "/assets/voc.svg",
      "insights": true,
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": {
        "en": "ppb"
      },
      "min": 0,
      "max": 2000,
      "step": 1
    }
  },
  "energy": {
    "batteries": [
      "AAA",
      "AAA"
    ]
  },
  "drivers": [
    {
      "id": "airthings-wave-plus",
      "name": {
        "en": "Airthings Wave Plus"
      },
      "class": "sensor",
      "capabilities": [
        "measure_radon",
        "measure_voc",
        "measure_humidity",
        "measure_pressure",
        "measure_temperature",
        "measure_co2"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "pollInterval",
              "type": "number",
              "label": {
                "en": "Poll interval in minutes (default is 30)"
              },
              "value": 30,
              "min": 1,
              "max": 999,
              "hint": {
                "en": "Define how often Homey should poll your Airthings Wave Plus. More often will reduce battery life."
              }
            },
            {
              "id": "pollTimeout",
              "type": "number",
              "label": {
                "en": "Poll timeout in seconds (default is 20)"
              },
              "value": 20,
              "min": 10,
              "max": 30,
              "hint": {
                "en": "Define how many seconds Homey should try to connect to your Airthings Wave Plus before timeout. Useful when your device is far away from Homey."
              }
            }
          ]
        }
      ],
      "images": {
        "large": "/drivers/airthings-wave-plus/assets/images/large.png",
        "small": "/drivers/airthings-wave-plus/assets/images/small.png"
      }
    },
    {
      "id": "airthings-wave",
      "name": {
        "en": "Airthings Wave"
      },
      "class": "sensor",
      "capabilities": [
        "measure_radon",
        "measure_humidity",
        "measure_temperature"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "pollInterval",
              "type": "number",
              "label": {
                "en": "Poll interval in minutes (default is 30)"
              },
              "value": 30,
              "min": 1,
              "max": 999,
              "hint": {
                "en": "Define how often Homey should poll your Airthings Wave Plus. More often will reduce battery life."
              }
            },
            {
              "id": "pollTimeout",
              "type": "number",
              "label": {
                "en": "Poll timeout in seconds (default is 20)"
              },
              "value": 20,
              "min": 10,
              "max": 30,
              "hint": {
                "en": "Define how many seconds Homey should try to connect to your Airthings Wave Plus before timeout. Useful when your device is far away from Homey."
              }
            }
          ]
        }
      ],
      "images": {
        "large": "/drivers/airthings-wave/assets/images/large.png",
        "small": "/drivers/airthings-wave/assets/images/small.png"
      }
    }
  ]
}